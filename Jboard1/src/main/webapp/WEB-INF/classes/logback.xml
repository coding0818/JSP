<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <!-- 콘솔출력 -->
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>
  
  <!-- 파일출력 -->
  <!--  
  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
  	<file>/logs/Jboard1.log</file>
  	<append>true</append>
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>
  -->

	<appender name="ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
	  	<file>/logs/Jboard1.log</file>
	  	<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
	  		<fileNamePattern>/logs/Jboard1-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
	  		<timeBaseFileNamingTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
	  			<maxFileSize>1MB</maxFileSize>
	  		</timeBaseFileNamingTriggeringPolicy>
	  	</rollingPolicy>
	    <encoder>
	      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
	    </encoder>
  	</appender>

  <root level="debug">
    <appender-ref ref="STDOUT" />
    <appender-ref ref="ROLLING" />
  </root>
</configuration>